{
  "name": "@truyman/dev",
  "version": "1.0.0",
  "description": "A CLI for common developer daily tasks",
  "license": "MIT",
  "bin": {
    "dev": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "format": "oxfmt",
    "prepare": "husky",
    "prepublishOnly": "bun run typecheck && bun test && bun run build",
    "release": "release-it",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.7",
    "@ai-sdk/openai": "^3.0.7",
    "@truyman/cli": "^1.0.2",
    "ai": "^6.0.14",
    "kleur": "^4.1.5",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.38.0",
    "release-it": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "oxfmt --no-error-on-unmatched-pattern",
      "oxlint --fix"
    ]
  },
  "engines": {
    "node": ">=24"
  }
}
