{
  "name": "@truyman/dev",
  "version": "1.0.0",
  "description": "A CLI for common developer daily tasks",
  "keywords": [
    "ai",
    "cli",
    "developer-tools",
    "git",
    "productivity"
  ],
  "homepage": "https://github.com/bentruyman/dev#readme",
  "bugs": {
    "url": "https://github.com/bentruyman/dev/issues"
  },
  "license": "MIT",
  "author": "Ben Truyman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bentruyman/dev.git"
  },
  "bin": {
    "dev": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "check": "bun run typecheck && bun run lint",
    "format": "oxfmt && oxlint --fix",
    "lint": "oxfmt --check && oxlint",
    "prepare": "husky",
    "prepublishOnly": "bun run check && bun run build",
    "release": "release-it",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.7",
    "@ai-sdk/openai": "^3.0.7",
    "@truyman/cli": "^1.0.2",
    "ai": "^6.0.14",
    "kleur": "^4.1.5",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.38.0",
    "release-it": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "oxfmt --no-error-on-unmatched-pattern",
      "oxlint --fix"
    ]
  },
  "engines": {
    "node": ">=22"
  }
}
